{
    "autoload": {
        "psr-4": {
            "Phi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phi\\Meta\\": "meta/",
            "Phi\\Tests\\": "tests/"
        }
    },
    "require": {
        "ext-mbstring": "*"
    },
    "require-dev": {
        "ext-json": "*",
        "ext-pcntl": "*",
        "ext-zlib": "*",
        "brianium/paratest": "^4.0",
        "nikic/php-parser": "^4.3",
        "phpdocumentor/reflection-docblock": "^4.3",
        "phpstan/phpstan": "^0.12.8",
        "phpstan/phpstan-strict-rules": "^0.12.2",
        "phpunit/phpunit": "^8.0",
        "symfony/finder": "^5.0"
    },
    "scripts": {
        "gen-src": "php meta/bin/generate_nodes.php; php meta/bin/optimize_parser.php",
        "gen-tests": "php tests/Parser/data/generated/generate_syntax_checks.php"
    },
    "config": {
        "sort-packages": true
    }
}
